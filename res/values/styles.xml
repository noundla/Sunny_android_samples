<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="fontTypeFace" parent="android:Theme">
        <item name="android:typeface">serif</item>
    </style>

	<!-- applying animation for activity level ##start##-->
    <style name="MyAwesomeAnimation">
  		  <!-- launching activity enter (second activity)-->
        <item name="android:activityOpenEnterAnimation">@anim/fade</item>
          <!-- launcher activity exit (first activity)-->
        <item name="android:activityOpenExitAnimation">@anim/fade_exit</item>
          <!-- launcher activity enter (first activity)-->
        <item name="android:activityCloseEnterAnimation">@anim/fade</item>
          <!-- launching activity exit (second activity) -->
        <item name="android:activityCloseExitAnimation">@anim/fade_exit</item>
    </style>

    <style name="Theme.MyAwesomeTheme" parent="@android:style/Theme">
        <item name="android:windowAnimationStyle">@style/MyAwesomeAnimation</item>
    </style>
	<!-- applying animation for activity level ##end##-->
	
	
	
	<!-- applying flip animation for activity level ##start##-->
    <style name="FlipAnimation">
  		  <!-- launching activity enter (second activity)-->
        <item name="android:activityOpenEnterAnimation">@anim/grow_from_middle</item>
          <!-- launcher activity exit (first activity)-->
        <item name="android:activityOpenExitAnimation">@anim/shrink_to_middle</item>
          <!-- launcher activity enter (first activity)-->
        <item name="android:activityCloseEnterAnimation">@anim/grow_from_middle</item>
          <!-- launching activity exit (second activity) -->
        <item name="android:activityCloseExitAnimation">@anim/shrink_to_middle</item>
    </style>

    <style name="Theme.FlipAnimationTheme" parent="@android:style/Theme">
        <item name="android:windowAnimationStyle">@style/FlipAnimation</item>
    </style>
	<!-- applying flip animation for activity level ##start##-->
	
	
	
	
	<style name="customDialogTheme" parent="@android:style/Theme.Dialog">
        <item name="android:buttonStyle">@style/Button</item>
        <item name="android:editTextStyle">@style/EditText</item>
        <!-- <item name="android:checkboxStyle">@style/Checkbox</item> -->
        <item name="android:textViewStyle">@style/TextView</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>
	<style name="Button" parent="@android:style/Theme" >
	    <item name="android:background">@drawable/button_shape</item>
	</style>
	<style name="TextView" parent="@android:style/Theme" >
	    <item name="android:textColor">@color/red</item>
	</style>
	<style name="EditText" parent="@android:style/Theme" >
	    <item name="android:background">@drawable/button_shape</item>
	</style>
	
</resources>