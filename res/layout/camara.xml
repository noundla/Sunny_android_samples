<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="fill_parent" android:background="@drawable/shapes" android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <Button
            android:id="@+id/take_photo"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Take Photo" />

        <Button
            android:id="@+id/pick_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pick Photo" />

        <ImageView
            android:id="@+id/display_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/icon" android:layout_gravity="center" android:visibility="gone"/>

        <Button
            android:id="@+id/Pick_from_folder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="pick photos from specified folder" android:layout_marginTop="10dp"/>

        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:id="@+id/images_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/DarkOliveGreen"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Images from specified folder:"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/red"
                    android:textStyle="bold" android:paddingLeft="15dp"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</ScrollView>